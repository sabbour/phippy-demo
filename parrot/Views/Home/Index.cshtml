@{
    ViewData["Title"] = "parrot";
}

<div class="ui raised segment">
    <h3 class="ui header">@ViewData["Title"]</h3>
  <p>parrot tells you what's going on on the ship... er... in the cluster.</p>
</div>

<h3>Pods &amp; Statuses</h3>
<ul id="pods">
</ul>

<div class="ui link cards" id="podcards" data-bind="foreach: pods">
  <div class="ui card">
    <div class="image">
      <img src="/media/captainkube.png">
    </div>
    <div class="content">
      <a class="header"><span data-bind="text: container"></span></a>
      <div class="meta">
        <span class="date">Pod: <span data-bind="text: name"></span></span><br/>
        <span class="date">Namespace: <span data-bind="text: nameSpace"></span></span><br/>
        <span class="date">Image: <span data-bind="text: containerImage"></span></span>
      </div>
    </div>
    <div class="extra content">
      <a>
        <i class="user icon"></i>
        Status: <span data-bind="text: status"></span>
      </a>
    </div>
  </div>
</div>

@section scripts
{
  <script src="~/scripts/knockout-3.4.2.js"></script>
  <script src="~/scripts/signalr.min.js"></script>
  <script src="~/scripts/daemon.js"></script>
  <script src="~/scripts/prototypes.js"></script>
}